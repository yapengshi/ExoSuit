<launch>
  <!-- Path to the URDF model inside the biped_s40 package -->
  <arg name="model" default="$(find biped_s40)/urdf/biped_s40.urdf" />

  <!-- Load URDF into the standard robot_description parameter -->
  <param name="robot_description" textfile="$(arg model)" />

  <!-- Publish joint states (no GUI) -->
  <node
    name="joint_state_publisher"
    pkg="joint_state_publisher"
    type="joint_state_publisher" />

  <!-- Publish TF frames using the URDF -->
  <node
    name="robot_state_publisher"
    pkg="robot_state_publisher"
    type="robot_state_publisher" />

  <!-- Run RViz with predefined configuration -->
  <node
    name="rviz"
    pkg="rviz"
    type="rviz"
    args="-d $(find biped_s40)/rviz/urdf.rviz" />

  <!-- Static transform from world to base_link -->
  <node
    name="world_to_base_link"
    pkg="tf"
    type="static_transform_publisher"
    args="0 0 0.88 0 0 0 world base_link 1000" />
</launch>
